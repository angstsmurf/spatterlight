IDR_EDIT_POPUP_MENU MENU DISCARDABLE 
BEGIN
    POPUP "Edit"
    BEGIN
        MENUITEM "Undo",                        ID_EDIT_UNDO
        MENUITEM SEPARATOR
        MENUITEM "Cut",                         ID_EDIT_CUT
        MENUITEM "Copy",                        ID_EDIT_COPY
        MENUITEM "Paste",                       ID_EDIT_PASTE
        MENUITEM "Delete",                      ID_EDIT_DELETE
        MENUITEM SEPARATOR
        MENUITEM "Select All",                  ID_EDIT_SELECTALL
        MENUITEM "Select Command",              ID_EDIT_SELECTLINE
        MENUITEM SEPARATOR
        MENUITEM "Find Text..."                 ID_EDIT_FIND
        MENUITEM "Find Next"                    ID_EDIT_FINDNEXT
    END
END

IDR_MAINWIN_POPUP MENUEX DISCARDABLE
BEGIN
    POPUP "Status Line"
    BEGIN
        MENUITEM "Pause Timer",                 ID_TIMER_PAUSE
        MENUITEM "Reset Timer",                 ID_TIMER_RESET
        MENUITEM "",,MFT_SEPARATOR
        MENUITEM "Show Timer",                  ID_VIEW_TIMER,, MFS_CHECKED
        POPUP "Timer Format"
        BEGIN
            MENUITEM "Hours:Minutes:Seconds",   ID_VIEW_TIMER_HHMMSS,
                                                MFT_RADIOCHECK, MFS_CHECKED
            MENUITEM "Hours:Minutes",           ID_VIEW_TIMER_HHMM,
                                                MFT_RADIOCHECK
        END
    END
END
   

IDR_MAIN_MENU MENUEX DISCARDABLE 
BEGIN
    POPUP "&File"
    BEGIN
        MENUITEM "&Open New Game...\tCtrl+O",   ID_FILE_LOADGAME
//      MENUITEM "View &Transcript...",         ID_FILE_VIEW_SCRIPT
        MENUITEM "",,MFT_SEPARATOR
        MENUITEM "&Save Position...\tCtrl+S",   ID_FILE_SAVEGAME
        MENUITEM "&Restore Position...\tCtrl+R",ID_FILE_RESTOREGAME
        MENUITEM "&Quit Game\tCtrl+Q",          ID_FILE_QUIT
        MENUITEM "",,MFT_SEPARATOR
        MENUITEM "No Recent Games",             ID_FILE_RECENT_NONE
        MENUITEM "",,MFT_SEPARATOR
        MENUITEM "E&xit",                       ID_FILE_EXIT
   
    END
    POPUP "&Edit"
    BEGIN
        MENUITEM "&Undo\tCtrl+Z",               ID_EDIT_UNDO
        MENUITEM "",,MFT_SEPARATOR
        MENUITEM "Cu&t\tCtrl+X",                ID_EDIT_CUT
        MENUITEM "&Copy\tCtrl+C",               ID_EDIT_COPY
        MENUITEM "&Paste\tCtrl+V",              ID_EDIT_PASTE
        MENUITEM "&Delete",                     ID_EDIT_DELETE
        MENUITEM "",,MFT_SEPARATOR
        MENUITEM "Select Co&mmand Line",        ID_EDIT_SELECTLINE
        MENUITEM "Select &All\tCtrl+A",         ID_EDIT_SELECTALL
        MENUITEM "",,MFT_SEPARATOR
        MENUITEM "&Find Text on Current Page...\tCtrl+F", ID_EDIT_FIND
        MENUITEM "Find &Next\tF3",              ID_EDIT_FINDNEXT
        MENUITEM "",,MFT_SEPARATOR
        MENUITEM "&Options...",                 ID_VIEW_OPTIONS
    END
    POPUP "&View"
    BEGIN
        MENUITEM "Show Tool&bar",               ID_VIEW_TOOLBAR,, MFS_CHECKED
        POPUP    "Time&r"
        BEGIN
            MENUITEM "&Pause Timer",            ID_TIMER_PAUSE
            MENUITEM "&Reset Timer",            ID_TIMER_RESET
            MENUITEM "",,MFT_SEPARATOR
            MENUITEM "&Show Timer",             ID_VIEW_TIMER,, MFS_CHECKED
            POPUP "Timer &Format"
            BEGIN
                MENUITEM "Hours:Minutes:&Seconds",ID_VIEW_TIMER_HHMMSS,
                                                MFT_RADIOCHECK
                MENUITEM "Hours:&Minutes",      ID_VIEW_TIMER_HHMM,
                                                MFT_RADIOCHECK
            END
        END
        MENUITEM "",,MFT_SEPARATOR
        POPUP "&Text Size"
        BEGIN
            MENUITEM "Sm&allest",               ID_VIEW_FONTS_SMALLEST,
                                                MFT_RADIOCHECK
            MENUITEM "&Smaller",                ID_VIEW_FONTS_SMALLER,
                                                MFT_RADIOCHECK
            MENUITEM "&Medium",                 ID_VIEW_FONTS_MEDIUM,
                                                MFT_RADIOCHECK
            MENUITEM "&Larger",                 ID_VIEW_FONTS_LARGER,
                                                MFT_RADIOCHECK
            MENUITEM "La&rgest",                ID_VIEW_FONTS_LARGEST,
                                                MFT_RADIOCHECK
        END
        MENUITEM "&Mute Sound",                 ID_MUTE_SOUND
    END
    POPUP "&Themes"
    BEGIN
        /* 
         *  note that we build the entire Themes menu dynamically; we just
         *  need a placeholder that looks like a profile ID to key off of
         */
        MENUITEM "Placeholder Theme",           ID_PROFILE_FIRST
    END
    POPUP "&Go"
    BEGIN
        MENUITEM "&Previous Page\tAlt+<",       ID_GO_PREVIOUS
        MENUITEM "&Next Page\tAlt+>",           ID_GO_NEXT
#ifdef HTMLTADS_GAME_CHEST
        MENUITEM "",,MFT_SEPARATOR
        MENUITEM "Game &Chest",                 ID_GO_TO_GAME_CHEST
#endif
    END
    POPUP "&Help"
    BEGIN
        MENUITEM "HTML TADS &Help",             ID_HELP_CONTENTS
        MENUITEM "",,MFT_SEPARATOR
        MENUITEM "&About HTML TADS...",         ID_HELP_ABOUT
        MENUITEM "About This &Game...",         ID_HELP_ABOUT_GAME
    END
END

