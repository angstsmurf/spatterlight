# implicit rules for deriving targets by extension
#
.SUFFIXES : .c .obj .cpp .rc .res

.c{$(OBJDIR)}.obj:
    $(CC) $(CFLAGS) -Fo$@ $<

.cpp{$(OBJDIR)}.obj:
    $(CC) $(CFLAGS) -Fo$@ $<

{win32}.cpp{$(OBJDIR)}.obj:
    $(CC) -Ycwindows.h $(CFLAGS) -Fo$@ $<

{win32}.rc{$(RESDIR)}.res:
    $(RC) $(RCFLAGS) -r -fo$@ $<

