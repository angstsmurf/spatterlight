# TADS HTML runtime
# Windows 32-bit makefile - Microsoft Visual C++ 5.0
#

# commands - these are set up for MS Visual C++
#

#COMPILE_FOR_DEBUG = 1

!ifdef COMPILE_FOR_DEBUG
CFLAGSDBG = -Zi -DTADSHTML_DEBUG
LDFLAGSDBG = /debug
!endif

CC = cl
VCDIR = e:\DevStudio\VC
CINCLUDES = 
JPEGLIB = .\jpeglib
PNGLIB = .\pnglib
ZIPLIB = .\zlib
CLIBS = $(VCDIR)\lib
CFLAGS = -c $(CINCLUDES) -I. -I.\win32 -I$(JPEGLIB) -I$(PNGLIB) \
    -I$(TADSDIR) -I$(TADSLIB) -DMSDOS -I$(ZIPLIB) -D__WIN32__ \
    -nologo -W3 $(CFLAGSDBG)
LD = link
LDFLAGS = /libpath:$(CLIBS) /subsystem:windows /nologo \
    /fixed:no $(LDFLAGSDBG)
RC = rc
RCFLAGS = 


# TADS2 directory
TADSDIR = ..\tads2

# TADS library directory
TADSLIB = ..\tads2\tadslib

# location of TADS Runtime 32-bit-for-HTML library
TRLIB = $(TADSDIR)\lib\tr32h.lib

# location of TADS Debugger 32-bit-for-HTML library
TDBLIB = $(TADSDIR)\lib\tdb32h.lib


# directories - these assume that the makefile is executed from the
# TADS HTML base directory, and the win32 sources are stored in the
# win32 subdirectory of the TADS HTML base directory.  Object files
# will be written to the obj subdirectory of the win32 subdirectory,
# and executables will be written to the win32\exe subdirectory.
#
WIN32DIR = win32
OBJDIR = $(WIN32DIR)\obj
EXEDIR = $(WIN32DIR)\exe
RESDIR = $(WIN32DIR)\res
NOTESDIR = notes

#
# base object files
#
BASE_OBJS = \
       $(OBJDIR)\tadshtml.obj \
       $(OBJDIR)\htmlprs.obj \
       $(OBJDIR)\htmltags.obj \
       $(OBJDIR)\htmlfmt.obj \
       $(OBJDIR)\htmldisp.obj \
       $(OBJDIR)\htmlsys.obj \
       $(OBJDIR)\htmlw32.obj \
       $(OBJDIR)\w32font.obj \
       $(OBJDIR)\w32snd.obj \
       $(OBJDIR)\w32img.obj \
       $(OBJDIR)\w32main.obj \
       $(OBJDIR)\hos_w32.obj \
       $(OBJDIR)\tadswin.obj \
       $(OBJDIR)\tadsapp.obj \
       $(OBJDIR)\tadsfont.obj \
       $(OBJDIR)\htmltxar.obj \
       $(OBJDIR)\htmlinp.obj \
       $(OBJDIR)\htmljpeg.obj \
       $(OBJDIR)\htmlrc.obj \
       $(OBJDIR)\htmlrf.obj \
       $(OBJDIR)\htmlhash.obj \
       $(OBJDIR)\tadsstat.obj \
       $(OBJDIR)\htmlpref.obj \
       $(OBJDIR)\tadsdlg.obj \
       $(OBJDIR)\tadscbtn.obj \
       $(OBJDIR)\htmlplst.obj \
       $(OBJDIR)\tadsreg.obj \
       $(OBJDIR)\oshtml.obj \
       $(OBJDIR)\tadsjpeg.obj \
       $(OBJDIR)\htmlpng.obj \
       $(OBJDIR)\tadsimg.obj \
       $(OBJDIR)\tadspng.obj \
       $(OBJDIR)\htmlsnd.obj \
       $(OBJDIR)\tadssnd.obj \
       $(OBJDIR)\tadsmidi.obj \
       $(OBJDIR)\tadswav.obj \
       $(OBJDIR)\tadsole.obj

#
# object files for HTML TADS runtime
#
TR_OBJS = \
       $(BASE_OBJS) \
       $(OBJDIR)\w32tr.obj

#
# object files for HTML TADS debugger
#
TDB_OBJS = \
       $(BASE_OBJS) \
       $(OBJDIR)\htmldcfg.obj \
       $(OBJDIR)\w32tdb.obj \
       $(OBJDIR)\htmldbg.obj \
       $(OBJDIR)\w32expr.obj \
       $(OBJDIR)\w32bpdlg.obj \
       $(OBJDIR)\w32fndlg.obj \
       $(OBJDIR)\w32dbgpr.obj \
       $(OBJDIR)\tadstab.obj \
       $(OBJDIR)\foldsel2.obj

#
# object files for HTML TADS Setup
#
SETUP_OBJS = \
       $(OBJDIR)\tadsdlg.obj \
       $(OBJDIR)\tsetup.obj \
       $(OBJDIR)\tadshtml.obj

# main target
#
all: $(EXEDIR)\htmltads.exe $(EXEDIR)\htmltdb.exe tdb_help_files \
     $(EXEDIR)\tsetup.exe

# 'clean' - delete derived files in preparation for a fresh compilation
#
clean:
    del $(OBJDIR)\*.obj
    del $(RESDIR)\*.res
    del $(EXEDIR)\*.exe
    del $(EXEDIR)\*.ilk
    del $(EXEDIR)\*.pdb
    del $(EXEDIR)\*.lib
    del $(EXEDIR)\*.exp
    del $(EXEDIR)\*.map
    del $(EXEDIR)\*.htm


# resource script
#
$(RESDIR)\tadshtml.res: win32\tadshtml.rc win32\htmlres.h


#
# HTML TADS main executable
#
$(EXEDIR)\htmltads.exe: $(TR_OBJS) $(RESDIR)\tadshtml.res $(TRLIB)
    $(LD) $(LDFLAGS) /MAP:$(EXEDIR)\htmltads.map /OUT:$@ @<<
$**
  $(JPEGLIB)\libjpeg.lib
  $(PNGLIB)\libpng.lib
  $(ZIPLIB)\zlib.lib
  $(TRLIB)
  winmm.lib
  dxguid.lib
  ole32.lib
  uuid.lib
  version.lib
/DEF:win32\tadshtml.def
advapi32.lib User32.lib GDI32.lib ComDlg32.lib ComCtl32.lib 
<<

# 
# HTML TADS debugger executable
#
$(EXEDIR)\htmltdb.exe: $(TDB_OBJS) $(RESDIR)\tadshtml.res $(TDBLIB)
    $(LD) $(LDFLAGS) /MAP:$(EXEDIR)\htmltdb.map /OUT:$@ @<<
$**
  $(JPEGLIB)\libjpeg.lib
  $(PNGLIB)\libpng.lib
  $(ZIPLIB)\zlib.lib
  $(TDBLIB)
  winmm.lib
  shell32.lib
  dxguid.lib
  ole32.lib
  uuid.lib
  version.lib
  mpr.lib
/DEF:win32\tdbhtml.def
advapi32.lib User32.lib GDI32.lib ComDlg32.lib ComCtl32.lib 
<<

#
# HTML TADS help files
#
tdb_help_files : $(EXEDIR)\helptdb.htm
$(EXEDIR)\helptdb.htm: $(NOTESDIR)\helptdb.htm
    copy $(NOTESDIR)\helptdb.htm $@


#
# HTML TADS Setup
#
$(EXEDIR)\tsetup.exe: $(SETUP_OBJS) $(RESDIR)\tsetup.res
    $(LD) $(LDFLAGS) /MAP:$(EXEDIR)\tsetup.map /OUT:$@ @<<
$**
shell32.lib
User32.lib 
GDI32.lib
ComCtl32.lib
advapi32.lib
<<



